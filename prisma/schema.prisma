datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Shelter {
  id        String   @id @default(uuid())
  name      String
  location  String
  description String
  imageUrl String?
  animals   Pet[]
  contractAddress String
  createdAt DateTime @default(now())
}

model Pet {
  id         String   @id @default(uuid())
  name       String
  age        Int
  description String
  imageUrl String
  shelter    Shelter  @relation(fields: [shelterId], references: [id])
  shelterId  String
  createdAt  DateTime @default(now())

  Donation Donation[]
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String?   @unique
  walletAddress String @unique
  createdAt DateTime @default(now())

  Donation Donation[]
}

model Donation {
  id            String   @id @default(uuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  pet           Pet      @relation(fields: [petId], references: [id])
  petId         String
  amount        Float
  transactionId String   @unique
  date          DateTime @default(now())
}
