datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Shelter {
  id        String   @id @default(uuid())
  name      String
  location  String
  description String
  imageUrl String?
  animals   Animal[]
  createdAt DateTime @default(now())
}

model Animal {
  id         String   @id @default(uuid())
  name       String
  age        Int
  description String
  imageUrl String
  shelter    Shelter  @relation(fields: [shelterId], references: [id])
  shelterId  String
  createdAt  DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String?   @unique
  walletAddress String @unique
  createdAt DateTime @default(now())
}
